<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/nek"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/ambulan"
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/mobil"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tombol" />

    <Button
        android:id="@+id/kapal"
        android:layout_width="63dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:background="@drawable/tombol" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="138dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ambulan"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ambulan"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="Sirine Ambulan"
        android:textColor="#ffff"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/ambulan" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="146dp"
        android:layout_height="131dp"
        android:layout_alignBottom="@+id/mobil"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/mobil"
        android:layout_alignParentLeft="true"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ambulan"
        android:layout_marginTop="180dp"
        android:textColor="#fff"
        android:text="Klakson Mobil"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/ambulan" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="146dp"
        android:layout_height="131dp"
        android:layout_alignBottom="@+id/kapal"
        android:layout_alignParentStart="true"
        android:background="@drawable/kapal"
        tools:ignore="VectorDrawableCompat"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ambulan"
        android:layout_marginBottom="139dp"
        android:text="Klakson Kapal"
        android:textSize="30sp"
        android:layout_alignLeft="@+id/ambulan" />
</RelativeLayout>